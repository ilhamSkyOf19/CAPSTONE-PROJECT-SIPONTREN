<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="container my-5">    
                    <!-- Judul Berita -->
                    <div class="text-center">
                      <h1 class="mb-4"><%= data.title %></h1>
                    </div>
                    <!-- Gambar Berita -->
                    <div class="text-center mb-4">
                      <img src="/public/imageBerita/<%= today %>/<%= data.thumbnail %>" class="img-fluid" alt="Gambar Berita">
                    </div>
                    <!-- Isi Berita -->
                    <div class="row justify-content-center">
                      <div class="col-md-8">
                        <p class="text-justify">
                          <%= data.content %>
                        </p>
                      </div>
                    </div>
              </div>
        </div>
    </div>
</div>

 


