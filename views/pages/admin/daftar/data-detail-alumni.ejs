<% if (!dataAlumni) { %>
    <div class="alert alert-danger fw-bold" role="alert">
        Data Tidak Ada! <br>
        <a href="/data-pendaftar" class="alert-link fw-normal">Kembali</a>.
      </div>
<% } else { %>
    <div class="flex items-center justify-center min-h-screen min-w-full bg-gray-100">
        <div class="max-w-sm w-full bg-white shadow-md rounded-lg p-6">
          <h2 class="text-2xl font-bold text-gray-800 mb-4 text-center">Alumni</h2>
          <div class="mb-4">
            <p class="text-sm font-medium text-gray-600">Nama:</p>
            <p class="text-lg text-gray-800"><%= dataAlumni.nama_alumni %></p>
          </div>
          <div class="mb-4">
            <p class="text-sm font-medium text-gray-600">Tanggal Lahir:</p>
            <p class="text-lg text-gray-800"><%= dataAlumni.tanggal_lahir %></p>
          </div>
          <div class="mb-4">
            <p class="text-sm font-medium text-gray-600">Angkatan:</p>
            <p class="text-lg text-gray-800"><%= dataAlumni.angkatan %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-600">Pesan:</p>
            <p class="text-lg text-gray-800">"<%= dataAlumni.pesan %>"</p>
          </div>
        </div>
      </div>
<% } %>


