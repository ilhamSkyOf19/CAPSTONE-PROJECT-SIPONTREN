<% if (!dataAlumni) { %>
  <div class="alert alert-danger fw-bold" role="alert">
      Data Tidak Ada! <br>
      <a href="/data-alumni" class="alert-link fw-normal">Kembali</a>.
  </div>
<% } else { %>
  <div class="flex items-center justify-center min-h-screen bg-gray-100">
      <!-- Card -->
      <div class="w-full max-w-xs min-h-96 bg-white rounded-2xl shadow-lg overflow-hidden">
          <!-- Header dengan Background Biru -->
          <div class="bg-blue-500 h-28"></div>

          <!-- Foto Bulat -->
          <div class="relative -mt-16 flex justify-center">
              <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-blue-500 shadow-md">
                  <img src="/public/imagesAlumni/<%= dataAlumni.imgAlumni %>" 
                       alt="Foto Alumni" 
                       class="object-cover w-full h-full">
              </div>
          </div>

          <!-- Detail Angkatan dan Pesan -->
          <div class="text-center p-6">
              <!-- Angkatan -->
              <h2 class="text-xl font-semibold text-gray-800">Angkatan <%= dataAlumni.angkatan %></h2>
              <!-- Pesan -->
              <p class="text-gray-600 mt-2 text-base font-medium">"<%= dataAlumni.pesan %>"</p>
              <!-- Tombol Kembali -->
              <div class="mt-6">
                <a href="/data-alumni" class="px-4 py-2 bg-gray-500 text-white font-semibold rounded-lg hover:bg-gray-600">
                  Kembali
                </a>
            </div>
          </div>
          
      </div>
  </div>
<% } %>
