<div class="container mx-auto mt-8 p-4">
    <div class="flex justify-center">
      <div class="w-full max-w-2xl bg-white shadow-lg rounded-lg p-6">
        <!-- Judul Halaman -->
        <div class="text-center">
          <h1 class="text-3xl font-bold text-gray-800 mb-2">Tambah Alumni</h1>
          <p class="text-gray-600">Isi data berikut untuk menambahkan Alumni.</p>
        </div>
  
        <!-- Pesan Error -->
        <% if (typeof errors != 'undefined') { %>
          <div class="mb-4 p-4 bg-red-100 text-red-700 border border-red-300 rounded-lg">
            <h2 class="text-lg font-semibold mb-2">Kesalahan Input:</h2>
            <ul class="list-disc pl-5">
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>
        <% if (typeof errorsMongoose != 'undefined') { %>
          <div class="mb-4 p-4 bg-red-100 text-red-700 border border-red-300 rounded-lg">
            <h2 class="text-lg font-semibold mb-2">Kesalahan Sistem:</h2>
            <ul class="list-disc pl-5">
              <% errorsMongoose.forEach(error => { %>
                <li><%= error.message %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>
  
        <!-- Form Tambah Berita -->
        <form action="/form-alumni" method="POST" enctype="multipart/form-data" class="space-y-6 mt-6">
          <!-- Judul Berita -->
          <div>
            <label for="nama_alumni" class="block text-gray-700 font-semibold mb-2">Nama ALumni</label>
            <input 
              type="text" 
              id="nama_alumni" 
              name="nama_alumni" 
              placeholder="Masukkan nama alumni" 
              value="<%= data ? data.nama_alumni : '' %>" 
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 focus:outline-none"
            />
          </div>
          <!-- tanggal berita -->
          <div>
            <label for="angkatan" class="block text-gray-700 font-semibold mb-2">Angkatan</label>
            <input 
              type="number" 
              id="angkatan" 
              name="angkatan"  
              value="<%= data ? data.angkatan : '' %>" 
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 focus:outline-none"
            />
          </div>
  
          <!-- Konten Berita -->
          <div>
            <label for="pesan" class="block text-gray-700 font-semibold mb-2">Konten</label>
            <textarea 
              id="pesan" 
              name="pesan" 
              rows="10" 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 focus:outline-none  whitespace-pre-wrap"
              placeholder="Tulis pesan..."><%= data ? data.pesan : '' %></textarea>
          </div>
          <!-- Thumbnail -->
          <div>
            <label for="imgAlumni" class="block text-gray-700 font-semibold mb-2">Gambar Alumni</label>
            <input 
              type="file" 
              id="imgAlumni" 
              name="imgAlumni" 
              accept="image/*" 
              required 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 focus:outline-none"
            />
            <p class="text-sm text-gray-500 mt-2">Format yang diizinkan: JPG, PNG (maksimal 1MB).</p>
          </div>
          <!-- Tombol Aksi -->
          <div class="flex justify-between items-center">
            <button 
              type="submit" 
              class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:ring focus:ring-blue-300"
            >
              Tambah Alumni
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  