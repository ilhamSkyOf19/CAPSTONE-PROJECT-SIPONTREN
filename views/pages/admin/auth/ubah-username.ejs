<div class="flex items-center justify-center min-h-screen w-full px-4 pt-16 z-10 bg-gray-100">
  <div class="w-full max-w-sm bg-white shadow-lg rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-700 text-center mb-6">Ubah Username</h1>

    <!-- Error Message -->
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <!-- Success Message -->
    <% if (typeof msg !== 'undefined' && msg.length !== 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h3><%= msg %></h3>
      </div>
    <% } %>

    <!-- Form -->
    <form method="post" action="/ubah-username?_method=PUT" class="space-y-4">
      <!-- ID Field -->

        <input type="hidden" id="_id" name="_id" placeholder="Masukkan ID Pengguna"
          value="<%= user ? user.id : '' %>"
          class="mt-1 w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300">

      <!-- Username Lama -->
      <div>
        <label for="usernameLama" class="block text-sm font-medium text-gray-700">Username Lama</label>
        <input type="text" id="usernameLama" name="usernameLama" placeholder="Masukkan username lama"
          class="mt-1 w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300">
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
        <input type="password" id="password" name="password" placeholder="Masukkan password"
          class="mt-1 w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300">
      </div>

      <!-- Username Baru -->
      <div>
        <label for="usernameBaru" class="block text-sm font-medium text-gray-700">Username Baru</label>
        <input type="text" id="usernameBaru" name="usernameBaru" placeholder="Masukkan username baru"
          class="mt-1 w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300">
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition duration-200">
        Kirim
      </button>
    </form>
  </div>
</div>
