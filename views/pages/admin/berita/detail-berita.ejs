<div class="container mx-auto px-4 py-8">
  <!-- Judul Berita -->
  <div class="text-center mb-6 ml-[10rem] sm:ml-[12rem] md:ml-[15rem]">
    <h1 class="text-3xl font-bold text-gray-800 sm:text-4xl md:text-5xl lg:text-6xl">
      <%= data.title %>
    </h1>
  </div>
  
  <!-- Gambar Berita -->
  <div class="flex justify-center mb-6 ml-[10rem] sm:ml-[12rem] md:ml-[15rem]">
    <img 
      src="/public/imageBerita/<%= today %>/<%= data.thumbnail %>" 
      alt="Gambar Berita" 
      class="w-full sm:w-3/4 md:w-2/3 lg:w-1/2 rounded-lg shadow-md"
    />
  </div>
  
  <!-- Isi Berita -->
  <div class="max-w-4xl mx-auto ml-[10rem] sm:ml-[12rem] md:ml-[15rem]">
    <p class="text-gray-800 text-sm sm:text-base md:text-lg lg:text-xl leading-relaxed text-justify">
      <%= data.content %>
    </p>
  </div>
</div>