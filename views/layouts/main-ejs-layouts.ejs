<!doctype html>
<html lang="en" class="dark" style="scroll-behavior: smooth;">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/public/asset/file_thumb.png" type="image/png">
    <title><%- title %></title>
    <link rel="stylesheet" href="/public/src/output.css">
    <!-- font poopins -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="flex flex-col font-poppins">
        <!-- Sidebar Navbar -->
      <% if (typeof dataUsername !== 'undefined' && dataUsername.length > 0) { %>
        <%- include('navbar-admin') %>
      <% } else { %>
          <%-include('navbar-user')%>
      <% } %>
        
     <% if (typeof dataUsername !== 'undefined' && dataUsername.length > 0) { %>
      <div class="ml-52 w-[80%]">
        <%-body%>
      </div>
     <% } else {%>
      <%-body%>
      <% } %>

      <% if (typeof dataUsername === 'undefined' || dataUsername.length === 0 || dataUsername === null) { %>
          <%- include('footer') %>
      <% } %>
    </div>
   

    <script src="/public/js/script.js"></script>
  </body>
</html>